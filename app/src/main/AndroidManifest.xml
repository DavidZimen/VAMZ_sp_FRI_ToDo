<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.vamz_sp_fri_todo">

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo_launcher"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logo_launcher"
        android:supportsRtl="true"
        android:theme="@style/Theme.VAMZ_sp_FRI_ToDo">
        <activity
            android:name=".student.StudentInformationActivity"
            android:exported="false" />
        <activity
            android:name=".calendar.CalendarActivity"
            android:exported="false" />
        <activity
            android:name=".app_logging.LoggingActivity"
            android:exported="true"
            android:theme="@style/Theme.VAMZ_sp_FRI_ToDo.NoActionBar"
            tools:ignore="DuplicateActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".mainFuncionality.MainFuncionalityActivity"
            android:exported="true"
            android:label="ToDo"
            tools:ignore="DuplicateActivity" />
    </application>

</manifest>